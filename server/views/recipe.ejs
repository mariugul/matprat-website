<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Marius Foods: Recipes</title>
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  <link rel="stylesheet" href="/css/style.css" type="text/css" />
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <script src="/js/http_requests.js"></script>

</head>

<body>
  <!-- Navigation Menu -->
  <!-- Put partial navigation template here -->


  <!-- CENTER ENITRE PAGE CONTENT -->
  <div class="w3-content w3-center" style="max-width:80%;">

    <!-- Image of the Finished Product -->
    <img class="finished-image" src="/images/waffles.jpg" alt="finished-img">

    <!-- Recipe Heading -->
    <h1>
      <%= recipeInfo[0].name %>
    </h1>

    <!-- Recipe Description  -->
    <p>
      <%= recipeInfo[0].description %>
    </p>


    <!-- Ingredients and Steps Responsive Resize -->
    <div class="w3-row">

      <!-- INGREDIENTS THAT GOES IN THE RECIPE  -->
      <!-- LEFT SIDE -->
      <div class="w3-quarter w3-container">
        <!-- CENTER CONTENT -->
        <div>
          <!-- HEADER -->
          <h2 class="steps-header w3-container w3-cell-top w3-left-align">Ingredients</h2>

          <!-- BOX THE 3 LISTS OF INGREDIENTS, UNIT and NAME -->
          <div class="w3-content w3-centered" style="min-width: fit-content">
            <!-- INGREDIENTS -->
            <div class="w3-container w3-cell" style="padding-right: 0; text-align: right;">
              <% ingredients.forEach(element=> { %>
                <p>
                  <%= element.amount %>
                </p>
                <% }) %>
            </div>

            <div class="w3-container w3-cell" style="padding-left: 4pt; padding-right: 0;">
              <% ingredients.forEach(element=> { %>
                <p>
                  <%= element.unit %>
                </p>
                <% }) %>
            </div>

            <div class="w3-container w3-cell" style="padding-left: 16pt; text-align: left;">
              <% ingredients.forEach(element=> { %>
                <p>
                  <%= element.ingredient %>
                </p>
                <% }) %>
            </div>

            <!-- BOX PORTIONS PICKER -->
            <div class="portions-block w3-mobile">

              <!-- Portions Picker -->
              <span class="portions-picker">
                <!-- Minus button -->
                <button class="w3-button w3-green w3-circle w3-center w3-ripple portion-buttons"
                  onclick="stepDownPortions()">-</button>

                <!-- Portions number  -->
                <input class="portions-number w3-center" id="nr-of-portions" type="number" name="" min="1" max="99"
                  maxlength="3" value="2">

                <!-- Plus button   -->
                <button class="w3-button w3-green w3-circle w3-center w3-medium w3-ripple portion-buttons"
                  onclick="stepUpPortions()">+</button>
              </span>

              <div class="portions-text">PORTIONS</div>
            </div>
            <!-- END OF PORTIONS PICKER -->
          </div>
          <!-- END OF INGREDIENTS BOX -->
        </div>
        <!--END OF CENTER CONTENT-->
      </div>
      <!-- END OF FIRST HALF  -->

      <!-- STEPS TO TAKE TO COOK THE RECIPE  -->
      <!-- RIGHT SIDE  -->
      <div class="w3-threequarter w3-container">
        <div class="w3-content" style="max-width:90%; padding-left: 40pt;">
          <h2 class="steps-header w3-container w3-cell-top w3-center">Steps</h2>
          <ol class="">
            <% steps.forEach(element=> { %>
              <li>
                <%= element.description %>
              </li>
              <% }) %>
          </ol>
        </div>
        <!-- END OF SECOND HALF  -->
      </div>
    </div>
  </div>
  <!-- END OF CENTER PAGE -->
</body>

</html>