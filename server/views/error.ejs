<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Partial Head Data -->
    <%- include('partials/head.ejs') %>
    <title>Error - Marius Foods</title>
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Header Navigation Menu -->
    <%- include('partials/nav.ejs') %>

    <!-- Main Content -->
    <main class="flex-grow-1 d-flex align-items-center justify-content-center bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card shadow-lg border-0">
                        <div class="card-body text-center p-5">
                            <!-- Error Icon -->
                            <div class="mb-4">
                                <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
                            </div>
                            
                            <!-- Error Title -->
                            <h1 class="display-4 fw-bold mb-3">Oops!</h1>
                            <h2 class="h4 text-muted mb-4">Something went wrong</h2>
                            
                            <!-- Error Message -->
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-info-circle"></i>
                                <%= errorMessage %>
                            </div>
                            
                            <!-- Actions -->
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                                <button onclick="history.back()" class="btn btn-primary btn-lg px-4">
                                    <i class="bi bi-arrow-left"></i> Go Back
                                </button>
                                <a href="/" class="btn btn-outline-secondary btn-lg px-4">
                                    <i class="bi bi-house"></i> Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" 
            crossorigin="anonymous"></script>
</body>

</html>