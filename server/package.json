{
  "name": "marius-recipes",
  "version": "1.0.0",
  "private": true,
  "description": "A website with all of my recipes.",
  "main": "app.js",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:ejs",
    "lint:js": "npx eslint .",
    "lint:ejs": "npx ejslint $(find ./ -type f -iname '*.ejs')",
    "format:js": "npx eslint . --fix",
    "test": "NODE_ENV=test mocha 'test/**/*.test.js' --timeout 5000 --exit",
    "test:integration": "NODE_ENV=test mocha 'test/integration/**/*.test.js' --timeout 5000 --exit",
    "test:e2e": "playwright test",
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "echo \"Error: no build specified\" && exit 0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "joi": "^17.13.3",
    "multer": "^2.0.2",
    "nodemon": "^3.1.9",
    "pg": "^8.16.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "chai": "^4.5.0",
    "ejs-lint": "^2.0.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "git-conventional-commits": "^1.4.2",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4"
  }
}
